datasource db {
  provider = "sqlite"
  url      = env("DATABASEURL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model user {
  userId      Int      @id @default(autoincrement())
  email       String   @unique
  name        String?
  memberSince DateTime @default(now())
}

model jobPost {
  jobId         Int      @id @default(autoincrement())
  jobPosterName String?
  title         String
  body          String
  createdAt     DateTime @default(now())
}
