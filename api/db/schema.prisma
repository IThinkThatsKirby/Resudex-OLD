datasource db {
  provider = "sqlite"
  url      = env("DATABASEURL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model user {

  name            String?
  email           String    @unique
  jobTitle        String?
  jobExp          Int
  yearsInIndustry Int
  memberSince     DateTime  @default(now())
  userId          Int       @id @default(autoincrement())
}

model jobPost {
  jobId         Int @id @default(autoincrement())

  jobPosterName String?
  title         String
  body          String
  createdAt     DateTime @default(now())
}
